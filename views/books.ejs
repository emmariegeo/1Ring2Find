<%- include('partials/header.ejs') %>
<%- include('partials/nav.ejs', { active: 'Books'}) %>
    <div class="container text-center">
      <h1>Books</h1>
      <h5>The books in the Lord of the Rings series.</h5>
      <div class="row row-cols-1 row-cols-md-3 p-4 g-4">
        <% bookList.forEach( (book) => {%>
          <div class="col">
            <div class="card h-100">
              <img src="images/book/<%= book._id %>.png" class="card-img-top" alt="<%= book.name %>">
              <div class="card-body d-flex flex-column justify-content-end align-content-center">
                <h5 class="card-title""><%= book.name %></h5>
                <p><a href="book/<%= book._id %>"><button class="btn btn-success">View Chapters</button></a></p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>


<%- include('partials/footer.ejs') %>